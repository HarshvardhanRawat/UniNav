<% layout('layouts/boilerplate') %>

<section class="page-header">
    <p class="eyebrow">Add New Room</p>
    <h1 class="page-title">Create a New Room Entry</h1>
    <p class="page-subtitle">Add room information to the database for campus navigation</p>
</section>

<section class="form-panel mb-4">
    <form method="POST" action="/dbs" novalidate class="needs-validation">
        <div class="row g-3">
            <div class="col-md-6">
                <label for="building" class="form-label">Building <span class="text-danger">*</span></label>
                <input type="text" id="building" name="room[building]" placeholder="e.g., New Academic Block" required class="form-control">
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please enter a building name.</div>
            </div>

            <div class="col-md-6">
                <label for="floor" class="form-label">Floor <span class="text-danger">*</span></label>
                <input type="text" id="floor" name="room[floor]" placeholder="e.g., Ground Floor, First Floor" required class="form-control">
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please enter the floor.</div>
            </div>
        </div>

        <div class="row g-3 mt-0">
            <div class="col-md-6">
                <label for="room" class="form-label">Room Number <span class="text-danger">*</span></label>
                <input type="text" id="room" name="room[room]" placeholder="e.g., G01, 105, A12" required class="form-control">
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please enter a room number.</div>
            </div>

            <div class="col-md-6">
                <label for="digipin" class="form-label">DIGIPIN <span class="text-danger">*</span></label>
                <input type="text" id="digipin" name="room[digipin]" placeholder="e.g., 39A-7F2-8K9" required class="form-control">
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please enter a valid DIGIPIN.</div>
            </div>
        </div>

        <div class="mb-3">
            <label for="landmark" class="form-label">Landmark <span class="text-danger">*</span></label>
            <textarea id="landmark" name="room[landmark]" rows="3" placeholder="Enter nearby landmark or location description (e.g., Near Main Entrance, Opposite Computer Lab)" required class="form-control"></textarea>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please enter a landmark description.</div>
        </div>

        <div class="mb-3">
            <label for="directionHint" class="form-label">Direction Hint</label>
            <textarea id="directionHint" name="room[directionHint]" rows="3" placeholder="Enter directional hints or navigation instructions (e.g., Turn left after the stairs, Go straight past the cafeteria)" class="form-control"></textarea>
            <div class="form-text">Optional: Provide additional navigation guidance</div>
        </div>

        <div class="form-actions">
            <a class="btn btn-outline-secondary btn-lg w-100 w-md-auto" href="/dbs">Cancel</a>
            <button type="submit" class="btn btn-primary btn-lg w-100 w-md-auto">Create Room Entry</button>
        </div>
    </form>
</section>
