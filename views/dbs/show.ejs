<% layout('layouts/boilerplate') %>

<section class="page-header">
    <p class="eyebrow">Room Details</p>
    <h1 class="page-title"><%= room.building %> - <%= room.room %></h1>
    <p class="page-subtitle"><%= room.floor %></p>
</section>

<section class="show-card">
    <div class="show-card__body">
        <div class="room-info-grid">
            <div class="info-card">
                <div class="info-icon">
                    <i class="fas fa-building"></i>
                </div>
                <div class="info-content">
                    <p class="info-label">Building</p>
                    <p class="info-value"><%= room.building || 'N/A' %></p>
                </div>
            </div>

            <div class="info-card">
                <div class="info-icon">
                    <i class="fas fa-layer-group"></i>
                </div>
                <div class="info-content">
                    <p class="info-label">Floor</p>
                    <p class="info-value"><%= room.floor || 'N/A' %></p>
                </div>
            </div>

            <div class="info-card">
                <div class="info-icon">
                    <i class="fas fa-door-open"></i>
                </div>
                <div class="info-content">
                    <p class="info-label">Room Number</p>
                    <p class="info-value"><%= room.room || 'N/A' %></p>
                </div>
            </div>

            <div class="info-card">
                <div class="info-icon">
                    <i class="fas fa-map-marker-alt"></i>
                </div>
                <div class="info-content">
                    <p class="info-label">Landmark</p>
                    <p class="info-value"><%= room.landmark || 'N/A' %></p>
                </div>
            </div>

            <div class="info-card info-card-full">
                <div class="info-icon">
                    <i class="fas fa-qrcode"></i>
                </div>
                <div class="info-content">
                    <p class="info-label">DIGIPIN</p>
                    <p class="info-value digipin-code"><%= room.digipin || 'N/A' %></p>
                </div>
            </div>
        </div>

        <div class="form-actions">
            <a href="/dbs" class="btn btn-outline-secondary btn-lg">
                <i class="fas fa-arrow-left me-2"></i>Back to List
            </a>
            <a href="/dbs/<%=room._id%>/edit" class="btn btn-primary btn-lg">
                <i class="fas fa-edit me-2"></i>Edit Room
            </a>
            <form method="POST" action="/dbs/<%=room._id%>?_method=DELETE" class="d-inline">
                <button type="submit" class="btn btn-danger btn-lg" onclick="return confirm('Are you sure you want to delete this room?')">
                    <i class="fas fa-trash me-2"></i>Delete Room
                </button>
            </form>
        </div>
    </div>
</section>

<style>
    .page-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 3rem 0;
        margin-bottom: 2rem;
    }

    .page-header .eyebrow {
        text-transform: uppercase;
        font-size: 0.875rem;
        letter-spacing: 0.1em;
        opacity: 0.9;
        margin-bottom: 0.5rem;
    }

    .page-header .page-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .page-header .page-subtitle {
        font-size: 1.125rem;
        opacity: 0.9;
        margin-bottom: 0;
    }

    .show-card {
        max-width: 1000px;
        margin: 0 auto;
        padding: 2rem;
    }

    .show-card__body {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 2.5rem;
    }

    .room-info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .info-card {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border-radius: 12px;
        padding: 1.5rem;
        display: flex;
        align-items: center;
        gap: 1rem;
        transition: all 0.3s ease;
        border: 2px solid transparent;
    }

    .info-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        border-color: #667eea;
    }

    .info-card-full {
        grid-column: 1 / -1;
    }

    .info-icon {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.5rem;
        flex-shrink: 0;
    }

    .info-content {
        flex: 1;
    }

    .info-label {
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: #6c757d;
        margin-bottom: 0.5rem;
        font-weight: 600;
    }

    .info-value {
        font-size: 1.25rem;
        font-weight: 700;
        color: #333;
        margin: 0;
    }

    .digipin-code {
        font-family: 'Courier New', monospace;
        background: #fff;
        padding: 0.5rem 1rem;
        border-radius: 6px;
        display: inline-block;
        border: 2px solid #667eea;
        color: #667eea;
    }

    .form-actions {
        display: flex;
        gap: 1rem;
        justify-content: flex-end;
        margin-top: 2rem;
        padding-top: 2rem;
        border-top: 2px solid #f0f0f0;
        flex-wrap: wrap;
    }

    .btn-lg {
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
    }

    .btn-danger {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        border: none;
    }

    .btn-danger:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(245, 87, 108, 0.4);
    }

    .btn-outline-secondary {
        border: 2px solid #6c757d;
    }

    .btn-outline-secondary:hover {
        background-color: #6c757d;
        color: white;
    }

    @media (max-width: 768px) {
        .show-card__body {
            padding: 1.5rem;
        }

        .room-info-grid {
            grid-template-columns: 1fr;
        }

        .info-card-full {
            grid-column: 1;
        }

        .page-header .page-title {
            font-size: 2rem;
        }

        .form-actions {
            flex-direction: column;
        }

        .form-actions .btn {
            width: 100%;
        }
    }
</style>