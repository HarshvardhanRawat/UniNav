<% layout("/layouts/boilerplate") %>

<section class="page-header">
    <div class="container">
        <p class="eyebrow">Error</p>
        <h1 class="page-title">Oops! Something went wrong</h1>
        <p class="page-subtitle">Error <%= err.statusCode || 500 %></p>
    </div>
</section>

<section class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center p-5">
                    <div class="error-icon mb-4">
                        <i class="fas fa-exclamation-triangle" style="font-size: 4rem; color: #dc3545;"></i>
                    </div>
                    <h2 class="card-title mb-3" style="color: #333;">
                        <%= err.statusCode === 404 ? 'Page Not Found' : 'Error Occurred' %>
                    </h2>
                    <p class="card-text mb-4" style="color: #666; font-size: 1.1rem;">
                        <%= err.message || 'Something went wrong. Please try again later.' %>
                    </p>
                    <% if (err.statusCode === 404) { %>
                        <p class="text-muted mb-4">
                            The page you're looking for doesn't exist or has been moved.
                        </p>
                    <% } %>
                    <div class="d-flex gap-3 justify-content-center flex-wrap">
                        <a href="/" class="btn btn-primary btn-lg">
                            <i class="fas fa-home me-2"></i>Go Home
                        </a>
                        <a href="javascript:history.back()" class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-arrow-left me-2"></i>Go Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>